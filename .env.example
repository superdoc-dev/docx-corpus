# Database connection
DATABASE_URL=postgres://postgres:postgres@localhost:5432/corpus

# Local storage path
STORAGE_PATH=./corpus

# Common Crawl settings
CRAWL_ID=                    # Optional: specific crawl ID (e.g., CC-MAIN-2025-51)
CONCURRENCY=5                # Parallel downloads
RATE_LIMIT_RPS=50           # Requests per second
MAX_RPS=100                  # Maximum RPS after recovery
MIN_RPS=10                   # Minimum RPS during backoff
TIMEOUT_MS=45000            # Request timeout
MAX_RETRIES=10              # Max retry attempts

# Cloudflare R2 (optional - for cloud storage)
CLOUDFLARE_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=docx-corpus
