{
  "name": "docx-corpus",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "lint": "biome check",
    "format": "biome format --write",
    "typecheck": "bun run --cwd apps/scraper typecheck",
    "test": "bun run --cwd apps/scraper test",
    "build": "bun run --cwd apps/scraper build",
    "release": "bun run --cwd apps/scraper release",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "husky": "^9.1.7"
  }
}